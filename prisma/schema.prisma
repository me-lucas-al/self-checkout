generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       String      @id @default(uuid())
  name      String
  slug      String
  avatarImageUrl String
  coverImageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuCategory {
  id       String      @id @default(uuid())
  name      String
  restaurant Restaurant @relation(fields: [restaurant], references: [id])
  restaurantId      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}